{
  "name": "@shopgate/bigcommerce-user",
  "version": "0.4.1",
  "description": "Shopgate Connect Bigcommerce User",
  "scripts": {
    "precommit": "npm run test && npm run lint-staged",
    "test": "_mocha --use_strict --recursive ./test",
    "test:unit": "_mocha --use_strict --recursive ./test/unit",
    "test:integration": "_mocha --use_strict --timeout 3000 --recursive ./test/integration",
    "lint": "standard",
    "lint-staged": "lint-staged",
    "check": "npm audit",
    "cover:unit": "nyc _mocha --recursive ../test/unit",
    "cover:integration": "nyc _mocha --use_strict --timeout 3000 --recursive ./test/integration",
    "cover": "nyc _mocha --use_strict --timeout 3000 --recursive ./test"
  },
  "lint-staged": {
    "*.js": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shopgate/ext-bigcommerce-user.git"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "jwt-simple": "^0.5.1",
    "lodash.get": "^4.4.2",
    "node-bigcommerce": "^3.0.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.2.0",
    "@types/sinon": "^4.1.3",
    "bunyan": "^1.8.12",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-chai": "0.0.1",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "mocha": "^5.1.1",
    "nyc": "^11.3.0",
    "proxyquire": "^2.0.1",
    "sinon": "^5.0.7",
    "standard": "^11.0.1"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
