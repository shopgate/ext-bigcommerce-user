{
  "version": "0.4.2",
  "id": "@shopgate/bigcommerce-user",
  "trusted": true,
  "configuration": {
    "storeHash" : {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.storeHash"
      }
    },
    "accessToken" : {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.accessToken"
      }
    },
    "clientId": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.clientId"
      }
    },
    "clientSecret": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.clientSecret"
      }
    },
    "storeDomain": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.storeDomain"
      }
    },
    "bigCommerceAppClientId": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.appClientId"
      }
    },
    "bigCommerceAppClientSecret": {
      "type" : "bigApi",
      "destination" : "backend",
      "default": null,
      "params": {
        "method":  "GET",
        "service": "config",
        "path": "/v1/shop/%(shopId)s/bigcommerce_api_credentials?parsed=true",
        "key": "value.appClientSecret"
      }
    },
    "requestTimeout": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": "15000"
      }
    }
  },
  "components": [
    {
      "id": "RegisterSubscription",
      "path": "frontend/Register/subscribers.js",
      "type": "subscribers"
    }
  ]
}
